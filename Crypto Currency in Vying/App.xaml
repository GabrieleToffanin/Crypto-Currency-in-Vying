<Application
    x:Class="Crypto_Currency_in_Vying.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Crypto_Currency_in_Vying">

    <Application.Resources>
        <!--#region ApplicationResources-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            <AcrylicBrush x:Key="CustomAcrylicBackgroundBrush" BackgroundSource="Backdrop"
                          TintOpacity="0.55" TintColor="Black"/>
            <AcrylicBrush x:Key="CustomAcrylicDataGridBackgroundBrush" BackgroundSource="HostBackdrop"
                          TintOpacity="0.40" TintColor="Snow" FallbackColor="Snow"/>
            <AcrylicBrush x:Key="CustomPageBackground" BackgroundSource="HostBackdrop"
                          TintOpacity="0.50" TintColor="Black" FallbackColor="Black"/>
            
        </ResourceDictionary>
        <!--#endregion-->
    </Application.Resources>

</Application>
